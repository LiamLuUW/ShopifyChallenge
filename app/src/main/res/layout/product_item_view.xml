<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/default_product" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/product_image"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/product_image"
        tools:text="title"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/product_amount_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_title"
        android:text="@string/product_list_inventory_name"
        android:layout_toEndOf="@id/product_image"
        android:layout_marginStart="8dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/product_total_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_title"
        android:layout_marginStart="8dp"
        tools:text="100"
        android:layout_toEndOf="@id/product_amount_name"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_amount_name"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/product_image"
        tools:text="this is the description of the product"
        android:textSize="14sp" />


</RelativeLayout>